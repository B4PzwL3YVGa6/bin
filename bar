#!/usr/bin/env bash
 
# ────────────── init ──────────────────────────────────── #
source ~/.cache/wal/colors.sh

underline_pix=6
clickable_areas=0

DIM=$(xrandr | grep \* |awk '{print $1}')
s_width="$(sed 's/x.*//' <<< "$DIM")"
s_height="$(sed 's/^[^x]*x//' <<< "$DIM")"

gap=24 # set this to the gap in dwm
w=$(echo "$s_width - $gap*2" | bc)
h=$(echo "$s_height / 18" | bc)
x=$gap
y=$(echo "$gap / 1.4" | bc)

rm -rf /tmp/bar
mkdir /tmp/bar
tmp=$(sh ~/bin/BSDNixVolume.sh -get)
if [ $tmp -gt 48 ] ; then 
    echo "\\uf028%{T3} $tmp%%{T-}" > /tmp/bar/vol
elif [ $tmp -gt 0 ] ; then
    echo "\\uf027%{T3} $tmp%%{T-}" > /tmp/bar/vol
else 
    echo "\\uf026" > /tmp/bar/vol
fi
if [ $(uname) == Linux ] ; then
    INTERFACE="wlan0"
else # BSD
    INTERFACE="iwn0"
fi
# ─────────────────────────────────────────────────────── #

layout() { 
    case $(< /tmp/dwm_info/current_layout) in
        "0") echo "\\uf44e" ;; # tiled
        "1") echo "F" ;; # floating
        "2") echo "M" ;; # monocle
        "3") echo "G" ;; # grid
        "4") echo "CMC" ;; # center master
        "5") echo "CFM" ;; # center floating master
        "6") echo "VVV" ;; # fibonacci
        "7") echo "DDD" ;; # top master
    esac
}

ws() {
    if [ $(< /tmp/dwm_info/current_ws) -eq $1 ] ; then
        cur="%{+u}"
    else
        cur="%{-u}"
    fi

    if [ $(< /tmp/dwm_info/ws"$1") -eq 1 ] ; then
        echo "$cur %{F$color2}$1%{F-} %{-u}"
    else
        echo "$cur $1 %{-u}"
    fi
}

# ----------- background processes -------------- #
while true ; do {
    sh ~/bin/vpn-check.sh > /tmp/bar/vpn
    
    tmpwifi=$(sh ~/bin/wifi-check.sh $INTERFACE)
    echo $tmpwifi > /tmp/bar/wifi

    # if [ $(pgrep mpd) ] ; then
    if [ $(pgrep mpv) ] ; then
        tmp=$(bash ~/bin/get-song.sh 61 '')
        echo "$tmp" > /tmp/bar/song
    elif [ -f /tmp/bar/song ] ; then
        rm /tmp/bar/song
    fi
    sleep 5
} done &
while sh ~/bin/battery-check.sh > /tmp/bar/bat
    do sleep 30
done &
while date '+%l:%M %p' > /tmp/bar/date
    do sleep 59
done &
# ----------------------------------------------- #

while \
    printf " %s%b%s%b%b%b%b%s \\n" \
        "$(ws 1)$(ws 2)$(ws 3)$(ws 4)$(ws 5)$(ws 6) " \
        "%{-u}%{T2}$(layout)" \
        "%{c}%{F$color2}%{T4}$(< /tmp/bar/song)%{F-}%{T-}" \
        "%{r}%{T2} $(< /tmp/bar/bat) " \
        "$(< /tmp/bar/wifi) " \
        "$(< /tmp/bar/vpn) " \
        "$(< /tmp/bar/vol)" \
        "%{F$color2}%{T5}$(< /tmp/bar/date) %{T-}%{F-}" 

    do sleep 0.5
done | \

lemonbar -db \
         -f "RobotoMono Nerd Font Mono:size=14" \
         -f "FontAwesome:size=16" \
         -f "tewi:size=16" \
         -f "RobotoMono Nerd Font Mono:size=12" \
         -f "Droid Sans Mono:size=10" \
         -g "$w"x"$h"+$x+$y \
         -n "bar" \
         -u "$underline_pix" \
         -U "$color2" \
         -B "$color0" \
         -F "$color1" \
         -a "$clickable_areas"
